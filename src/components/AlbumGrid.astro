---
import {Image} from 'astro:assets';
import {albumCollection} from '../services/collections';
import Section from './Section.astro';
---

<Section isWide>
	<ul class="List--raw Grid Grid--10">
		{
			albumCollection.map(
				({
					id,
					title,
					artist,
					cover,
					preview,
					dominantColor
				}) => {
					const linkTitle = `${title} by ${artist}`;

					return (
						<li>
							<a
								class="Reflection"
								href={`/albums/${id}`}
								title={linkTitle}
								data-preview={preview}
							>
								<Image
									class="Backdrop"
									src={cover}
									alt={linkTitle}
									widths={[60]}
									sizes="60px"
									loading="eager"
									style={{
										background: dominantColor
									}}
								/>
							</a>
						</li>
					);
				}
			)
		}
	</ul>
</Section>

<style>
	a {
		display: block;
	}

	a:is(:hover, :focus) {
		transform: scale(1.05);
	}
</style>
